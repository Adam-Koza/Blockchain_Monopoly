<!-- partial for updating a game piece -->
<!DOCTYPE html>
<html>
  <head>
    <title>Update Game Piece</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  </head>
  <body>
    <% include ../../navBar %>
    <div class="player-background">
    <div class="container">
        <h1>Update piece: <%- piece['name'] %></h1>
        <p></p>

        <hr>

        <div class="col-5">
          <form class="form-group" action="/board/piece/update/<%- piece['_id'] || "" %>" method="post">
            <% include ./form %>
            <div>
              <br>
              <input class="btn btn-primary btn-lg" role="button" type="submit" value="Submit"/><br><br><hr>
            </div>
          </form>
          <hr>
          <a href="/board/index"><h4>&#8592; Back to game boards</h4></a>
        </div>
    </div>
  </div>
  </body>
</html>
