<!-- Displaying a game piece -->
<!DOCTYPE html>
<html>
  <head>
    <title><%= piece['name'] %>'s info</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  </head>
  <body>

    <% include ../navBar %>

    <div class="players-background">

    <div class="container">
      
        <h1><%= piece['name'] %></h1>
        <p>
          Address: <%= piece['description'] %>
          <br/>
          Balance: <%= piece['imageURL'] %>
          <br/>
          <br/>
          Joined: <%= piece['created_at'] %>
          <br/>
          Last updated: <%= piece['updated_at'] %>
        </p>

        <div>
            <form action="/board/piece/delete/<%= piece['_id'] %>" method="GET" style="display: inline;">
            <br>
            <button class="btn btn-outline-danger btn-sm" type="submit">Delete <%= piece['name'] %>'s profile</button>
            </form>
        </div>
        <hr>
        <p>
          Game boards containing this game piece: ...
        </p>

    </div>
  </div>
  </body>
</html>
