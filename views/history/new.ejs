
<!-- partial for creating a new user -->
<!DOCTYPE html>
<html>
  <head>
    <title>Create new game</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  </head>
  <body>

    <% include ../navBar %>

    <div class="container">
        <h1>Create a new game</h1>
        <p>For testing purposes. A game should be recorded in the game history when a game ends automatically.</p>

        <hr>

        <div class="col-5">
          <form class="form-group" action="/history/save" method="post">
            Username: <br>
            <input class="form-control" type="text" name="username" value="<%- history['username'] || "" %>" required>
            <br>
            Public Key:<br>
            <input class="form-control" type="text" name="publicKey" value="<%- history['publicKey'] || "" %>" required>
            <br>
            Token Balance:<br>
            <input class="form-control" type="text" name="balance" value="<%- history['balance'] || "" %>" required>
            <br>
            <div>
              <br>
              <input class="btn btn-primary btn-lg" role="button" type="submit" value="Submit"/><br><br><hr>
            </div>
          </form>
        </div>
    </div>
  </body>
</html>
